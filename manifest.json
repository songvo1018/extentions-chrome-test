{
  "name": "Extention",
  "description": "Extention for SOFTMATE. Author: Alexey Nosov",
  "version": "1.3",
  "manifest_version": 2,
  "background": {
    "scripts": ["./background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "./icon_16x16.png",
    "32": "./icon_32x32.png",
    "48": "./icon_48x48.png",
    "128": "./icon_128x128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "https://*.google.com/*",
    "https://*.google.ru/",
    "https://*.yandex.ru/*",
    "https://*.bing.com/*"
  ],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content-script.js"],
    "css": ["style.css"]
  }]
}